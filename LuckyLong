import java.io.*;
import java.util.*;
class Lucky5
{   
   public static void main(String args[])
   {
      Scanner sc=new Scanner(System.in);
      int t=sc.nextInt();
      while(t-- >=1)
      {
          String s=sc.next();
          int a=s.length();
          for(int i=0;i<s.length();i++)
          {
              if((s.charAt(i)=='4')||(s.charAt(i)=='7'))
   		{
   		a--;
   		}
          }
          System.out.println(a);
      }
   }
} 
